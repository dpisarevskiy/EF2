@model GuestResponse
<div class="text-center m-3">
    <h1>Thank you, @Model.Name!</h1>
    @if (Model.WillAttend == true)
    {
        <div>It's great that you're coming. The drinks are aleady in the fridge</div>
    }
    else
    {
        <div>
            Sorry you hear that you can't make it, but thanks for letting us know.
        </div>
    }
    Click <a asp-action="ListResponses">here</a> to see who is comming.
</div>
